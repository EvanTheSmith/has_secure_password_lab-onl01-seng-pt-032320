<h3> Log in below </h3>

<%= form_for :user, url: '/login' do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %><br />
  
    <%= f.label :password %>:
    <%= f.password_field :password %><br />

    <%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation %><br />
  
    <%= f.submit %>
<% end %>